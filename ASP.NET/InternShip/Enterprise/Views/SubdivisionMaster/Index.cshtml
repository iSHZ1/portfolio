@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Enterprise.Model.SubdivisionMaster>
@{
    ViewBag.Title = "SubdivisionMasters";
    Layout = "_Layout";
}

<div class="profile__title container">
    Профили руководителей всех подразделений
    <a asp-controller="SubdivisionMaster" asp-action="Create" class="profile__link">Добавить руководителя</a>
  </div>
  <table class="profile__table container">
    <tr>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Отчество</th>
      <th>Дата Рождения</th>
      <th>Должность</th>
      <th>Название подразделения</th>
      <th></th>
      <th></th>
    </tr>
    @foreach (var subdivisionMaster in Model)
    {<tr>
          <td>@subdivisionMaster.LastName</td>
          <td>@subdivisionMaster.FirstName</td>
          <td>@subdivisionMaster.PatronicName</td>
          <td>@subdivisionMaster.DateBirth</td>
          <td>Руководитель подразделения</td>
          <td>@subdivisionMaster.Subdivision.Title</td>
          <td><a asp-controller="SubdivisionMaster" asp-action="Edit" asp-route-id="@subdivisionMaster.Id" class="profile__editLink">Редактировать</a></td>
    <td><a asp-controller="SubdivisionMaster" asp-action="Delete" asp-route-id="@subdivisionMaster.Id" class="profile__editLink">Удалить</a></td>
    </tr>
        }
  </table>
