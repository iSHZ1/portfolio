@model IEnumerable<Enterprise.Model.Inspector>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "TableInspector";
    Layout = "_Layout";
}

<div class="tables__container container">

    <div class="table__title">Инспекторы всех подразделений</div>
    <table class="table__subvisionMaster">
      <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Дата Рождения</th>
        <th>Должность</th>
        <th>Название подразделения</th>
        <th></th>
      </tr>
       @foreach (var inspector in Model)
       {
         <tr>
           <td>@inspector.LastName</td>
           <td>@inspector.FirstName</td>
           <td>@inspector.PatronicName</td>
           <td>@inspector.DateBirth</td>
           <td>Инспектор подразделения</td>
           <td>@inspector.Subdivision.Title</td>
           <td><a asp-controller="Position" asp-action="IncreaseInspector" asp-route-id="@inspector.Id" class="increase__link">Повысить</a></td>
         </tr>
       }
    </table>
</div>
  <a asp-controller="Position" asp-action="Index" class="come-back container">Вернуться назад</a>
