@model IEnumerable<Enterprise.Model.Headmaster>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "TableHeadmaster";
    Layout = "_Layout";
}

<div class="tables__container container">

    <div class="table__title">Директоры всех подразделений</div>
    <table class="table__subvisionMaster">
      <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Дата Рождения</th>
        <th>Должность</th>
        <th>Название подразделения</th>
      </tr>
      @foreach (var headmaster in Model)
          {
            <tr>
              <td>@headmaster.LastName</td>
              <td>@headmaster.FirstName</td>
              <td>@headmaster.PatronicName</td>
              <td>@headmaster.DateBirth</td>
              <td>Директор</td>
              <td>@headmaster.Subdivision.Title</td>
            </tr>
          }
    </table>
    
  </div>
  <a asp-controller="Position" asp-action="Index" class="come-back container">Вернуться назад</a>
