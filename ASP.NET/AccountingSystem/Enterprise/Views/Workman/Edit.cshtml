@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Enterprise.Model.Workman
@{
    ViewBag.Title = "Workman";
    Layout = "_Layout";
}

<div class="profile__title container">
    Редактирование профиля рабочего подразделения
  </div>
<form method="post" class="profile__form container">
    <input hidden type="number" value="@Model.Id">
    <label for="">Имя</label>
    <input name="firstName" value="@Model.FirstName" type="text">
    <label for="">Фамилия</label>
    <input name="lastName" value="@Model.LastName" type="text">
    <label for="">Отчество</label>
    <input name="patronicName" value="@Model.PatronicName" type="text" required>
    <label for="">Дата рождения</label>
    <input name="dateBirth" value="@Model.DateBirth" type="text" required>
    <label for="">Название подразделения</label>
    <input name="titleSubdivision" value="@Model.Subdivision.Title" type="text" readonly>
    <label for="">ФИО руководителя подразделения</label>
    <input name="fullNameMaster" value="@Model.FullNameSubdivisionMaster" type="text" readonly>
    <button type="submit" class="profile__add">Изменить данные</button>
</form>
  <a asp-controller="Workman" asp-action="Index" class="come-back container">Вернуться назад</a>
