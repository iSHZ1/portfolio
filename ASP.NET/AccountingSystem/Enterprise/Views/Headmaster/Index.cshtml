@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Enterprise.Model.Headmaster>
@{
    ViewBag.Title = "Headmasters";
    Layout = "_Layout";
}

<div class="profile__title container">
    Профили директоров всех подразделений
    <a asp-controller="Headmaster" asp-action="Create" class="profile__link">Добавить директора</a>
  </div>
  <table class="profile__table container">
    <tr>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Отчество</th>
      <th>Дата Рождения</th>
      <th>Должность</th>
      <th>Название подразделения</th>
      <th></th>
      <th></th>
    </tr>
    @foreach (var headmaster in Model)
    {
      <tr>
        <td>@headmaster.LastName</td>
        <td>@headmaster.FirstName</td>
        <td>@headmaster.PatronicName</td>
        <td>@headmaster.DateBirth</td>
        <td>Директор</td>
        <td>@headmaster.Subdivision.Title</td>
        <td><a asp-controller="Headmaster" asp-action="Edit" asp-route-id="@headmaster.Id" class="profile__editLink">Редактировать</a></td>
              <td><a asp-controller="Headmaster" asp-action="Delete" asp-route-id="@headmaster.Id" class="profile__editLink">Удалить</a></td>
      </tr>
    }
  </table>
